- extends "smartmin/read.html"
- load smartmin i18n

- block pre-content

- block content

  - include 'common_dialogs.haml'

  %script{ type:"text/javascript" }
    var contextData = {{ context_data_json|safe }};

  .{ ng-controller:"HomeController", ng-init:'init({{ initial_label_id|default:"null" }})' }
    .page-header.clearfix
      %h2.pull-back
        - block home-title

      .page-header-buttons{ ng-if:"activeLabel" }
        .label-name
          %span.glyphicon.glyphicon-tag
          &nbsp;
          [[ activeLabel.name ]]
        - if org_perms.cases.label_update or org_perms.cases.label_delete
          .btn-group
            - if org_perms.cases.label_update
              %a.btn.btn-default{ ng-href:"/label/update/[[ activeLabel.id ]]/", tooltip:"Edit Label" }
                %span.glyphicon.glyphicon-pencil
            - if org_perms.cases.label_delete
              %button.btn.btn-default{ ng-click:"onDeleteLabel()", tooltip:"Delete Label" }
                %span.glyphicon.glyphicon-trash

    .row
      .col-md-2
        - block home-menu

        .label-menu
          %h3
            - trans "Labels"
          %ul
            %li{ ng-repeat:"label in labels" }
              %a{ href:"#", ng-click:"activateLabel(label)" }
                %strong{ ng-if:"label == activeLabel" }
                  [[ label.name ]] ([[ label.count ]])
                %span{ ng-if:"label != activeLabel" }
                  [[ label.name ]] ([[ label.count ]])
      .col-md-10
        - block home-items


- block extra-style
  {{ block.super }}
  :css
    .home-menu > li > a {
      padding: 7px 12px;
    }
    .label-name {
      font-size: 20px;
      display: inline-block;
      padding: 3px 12px 3px 0;
    }
    .label-menu {
      margin: 1em 0;
    }
    .label-menu h3 {
      margin: 0 0 1em 0;
      font-size: 1.2em;
    }
    .label-menu ul {
      margin: 0;
      padding: 0;
      list-style: none;
    }
